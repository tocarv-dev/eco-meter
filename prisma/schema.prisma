generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("POSTGRES_CONNECT_STRING")
}

model Surveys {
  id String @id @default(uuid())
  userid String
  createdAt DateTime @default(now())

  gender String
  age Int
  municipality String

  meals_vegan Int
  meals_redmeat Int
  meals_whitemeat Int

  flights_hour Int?
  flights_short Int?
  flights_medium Int?
  flights_long Int?

  bags_unsorted Int
  bags_paper Int?
  bags_plastic Int?
  bags_glass Int?
  bags_organic Int?

  home_residents Int 
  home_eletricity Int

  gas_type String?
  gas_spend Int?

  useWood Boolean @default(false)

  transport_dieselCar Int?
  transport_gasCar Int?
  transport_hybridCar Int?
  transport_gplCar Int?
  transport_eletricCar Int?
  transport_motorcycle Int?
  transport_taxi Int?
  transport_train Int?
  transport_bus Int?
  transport_subway Int?
  transport_tram Int?
  transport_ferryFoot Int?
  transport_ferryCar Int?
  
  profile String
}

model User {
  id            String          @id @default(cuid())
  name          String?
  username      String?         @unique
  email         String?         @unique
  emailVerified DateTime?
  image         String?
  password String
  salt String
  Session       Session[]
  Account       Account?
  // Optional for WebAuthn support
  Authenticator Authenticator[]
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model Account {
  id                       String  @id @default(cuid())
  userId                   String  @unique
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? @db.Text
  access_token             String? @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? @db.Text
  session_state            String?
  refresh_token_expires_in Int?
  user                     User?   @relation(fields: [userId], references: [id])
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  @@unique([provider, providerAccountId])
  @@index([userId])
}
 
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  @@index([userId])
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@unique([identifier, token])
}
 
// Optional for WebAuthn support
model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([userId, credentialID])
}